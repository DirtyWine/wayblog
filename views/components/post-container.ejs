<div class="col-md-4 c" >
    <div class ="post">
      <!-- 标题 -->
      <div class="post-title">
        <!-- 头像 -->
        <div class="post-head">
          <img class="img-circle" src="/img/<%= post.author.avatar %>">
        </div>
        <div class="title-container">
          <!-- 标题 -->
          <a href="/posts/<%= post._id %>" ><h2><%= post.title %></h2></a>
          <!-- 作者 -->
          <a href="/posts?author=<%= post.author._id %>"><p><%= post.author.name %></p></a>
        </div>
      </div>
      <!-- 文本内容 -->
      <div class="post-body">
        <%- post.content %>
      </div>
      <!-- 注脚、时间 -->
      <div class="post-foot">
          <span class="tag"><%= post.created_at %></span>
          <span class="tag " style="float:right">
            <span>浏览(<%= post.pv || 0 %>)</span>
            <span>留言(<%= post.commentsCount || 0 %>)</span>
            <% if (user && post.author._id && user._id.toString() === post.author._id.toString()) { %>
              <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/posts/<%= post._id %>/edit">编辑</a></div>
                  <div class="item"><a href="/posts/<%= post._id %>/remove">删除</a></div>
                </div>
              </div>
            <% } %>
          </span>
      </div>
    </div>
</div>